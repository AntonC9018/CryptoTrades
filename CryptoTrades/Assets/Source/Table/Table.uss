.row > * {
    flex-grow: 1;
    justify-content: flex-start;
    -unity-text-align: upper-center;
    margin: 0;
}

.row-header > * {
    background-color: #4d4d4d;
}

.row-odd > * {
    background-color: #9b9b9b;
}

.row-even > * {
    background-color: #d2d2d2;
}

.row {
    flex-grow: 1;
    flex-direction: row;
}